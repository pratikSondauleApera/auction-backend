generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id           String     @id @default(cuid())
  firstName    String
  lastName     String?
  email        String     @unique
  password     String
  phone        String
  address      String
  state        States     @relation(fields: [stateId], references: [id])
  stateId      String
  city         Cities     @relation(fields: [cityId], references: [id])
  cityId       String
  pincode      String
  role         Roles
  active       Boolean    @default(false)
  verified     Boolean    @default(false)
  otp          String?
  otpCreatedAt DateTime?
  createdAt    DateTime   @default(now())
  updatedAt    DateTime?  @updatedAt
  auctions     Auctions[]
}

model Auctions {
  id                  String     @id @default(cuid())
  loanAccountNumber   String     @unique
  state               States     @relation(fields: [stateId], references: [id])
  stateId             String
  city                Cities     @relation(fields: [cityId], references: [id])
  cityId              String
  location            Locations  @relation(fields: [locationId], references: [id])
  locationId          String
  startDate           String
  endDate             String
  reservePrice        String
  emd                 String
  applicationDeadLine String
  assetType           AssetTypes @relation(fields: [assetTypeId], references: [id])
  assetTypeId         String
  institutionBank     String
  attachments         String
  user                Users      @relation(fields: [userId], references: [id])
  userId              String
  createdAt           DateTime   @default(now())
  updatedAt           DateTime?  @updatedAt
}

model AssetTypes {
  id       String     @id @default(cuid())
  name     String
  auctions Auctions[]
}

model Countries {
  id     String   @id @default(cuid())
  name   String
  states States[]
}

model States {
  id        String     @id @default(cuid())
  name      String
  countries Countries  @relation(fields: [countryId], references: [id])
  countryId String
  cities    Cities[]
  users     Users[]
  auctions  Auctions[]
}

model Cities {
  id        String      @id @default(cuid())
  name      String
  states    States      @relation(fields: [stateId], references: [id])
  stateId   String
  locations Locations[]
  users     Users[]
  auctions  Auctions[]
}

model Locations {
  id       String     @id @default(cuid())
  name     String
  cities   Cities     @relation(fields: [cityId], references: [id])
  cityId   String
  auctions Auctions[]
}

enum Roles {
  ADMIN
  DE
  USER
}
